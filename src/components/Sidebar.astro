---
const { recentPosts, categories } = Astro.props;
---
<aside class="sidebar">
  <section>
    <h3>Recent Posts</h3>
    <ul>
      {recentPosts.map(post => <li><a href={`/blog/${post.slug}/`}>{post.data.title}</a></li>)}
    </ul>
  </section>
  <section>
    <h3>Categories</h3>
    <ul>
      {categories.map(cat => <li>{cat}</li>)}
    </ul>
  </section>
</aside>
